
<table class="table table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>講義名</th>
      <th>値段</th>
      <th>詳細</th>
      <th>イメージ</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.lecture %></td>
        <td><%= book.price %></td>
        <td><%= book.comment %></td>
        <td><%= book.image_path%></td>
        <td class="text-right">
            <%= link_to '編集', edit_book_path(book), :class => 'btn btn-link btn-xs' %>
            <%= link_to '削除', book_path(book), :class => 'btn btn-xs btn-danger',
                      :method => :delete, :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

